<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!--Your comment-->

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <ImageView fx:id="logo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/logos/Wariant2-1.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
               <children>
                  <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <PasswordField fx:id="passwordField" onKeyPressed="#resetErrorLabel" promptText="HASŁO" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetButtonPressed" prefWidth="80.0" text="Zresetuj" GridPane.rowIndex="2" />
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonPressed" prefWidth="80.0" text="Zarejestruj" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonPressed" prefWidth="80.0" text="Zaloguj" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="loginField" onKeyPressed="#resetErrorLabel" promptText="LOGIN" GridPane.columnSpan="2" />
                     </children>
                  </GridPane>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="600.0">
               <children>
                  <Label fx:id="loginErrorLabel" prefHeight="35.0" prefWidth="600.0" text="Podano nieprawidłową nazwę użytkownika lub hasło" textAlignment="CENTER" textFill="#e43f3f">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                  </Label>
               </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
